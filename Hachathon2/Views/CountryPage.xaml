<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hachathon2.CountryPage">
    <ContentPage.Content>
        <StackLayout Padding="5">

            <Image Source="Logo.png"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand"  HeightRequest="40" Padding="10" Spacing="10">
                <Label Text="Country" TextColor="Blue" FontSize="15" 
                           VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
                <Picker x:Name="CountryPicker"  Title="Choose Country" 
                            VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"
                            WidthRequest="150"  FontSize="Small" >
                </Picker>

            </StackLayout>
            <Button x:Name="CountryButton" Text="Next" TextColor="Blue" BackgroundColor="White"
                        HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                    BorderRadius="50"  BorderColor="Blue" BorderWidth="1" Clicked="CountryButton_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>